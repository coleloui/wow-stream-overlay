{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:jsdoc/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "ecmaFeatures": {},
    "sourceType": "module"
  },
  "plugins": [
    "jsdoc",
    "prettier"
  ],
  "rules": {
    "camelcase": [
      "off",
      {
        "properties": "never"
      }
    ],
    "jsdoc/no-undefined-types": "off",
    "jsdoc/require-param-description": "off",
    "jsdoc/require-returns-description": "off",
    "jsdoc/valid-types": "off",
    "prettier/prettier": [
      "warn",
      {
        "endOfLine": "auto",
        "printWidth": 160,
        "semi": false,
        "singleQuote": true
      }
    ]
  }
}